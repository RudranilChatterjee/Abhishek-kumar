<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tapestry"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Length" >

    <TextView
        android:id="@+id/textViewselectlengthparameter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="Select Conversion Unit"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#347C17" />

    <Spinner
        android:id="@+id/spinnerlengthunit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewselectlengthparameter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp" />

    <EditText
        android:id="@+id/editTextlenvalue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerlengthunit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Enter the value"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/convertlenbutton"
        style="@android:style/ButtonBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextlenvalue"
        android:layout_below="@+id/editTextlenvalue"
        android:layout_marginTop="42dp"
        android:text="Convert" />

    <TextView
        android:id="@+id/lenresult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/convertlenbutton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:hint="Result"
        android:textColor="#008080"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40sp" />

</RelativeLayout>
