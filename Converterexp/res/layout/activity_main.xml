<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tapestry"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Select Conversion Parameter"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#347C17"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/editTextnum2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextnum1"
        android:layout_below="@+id/editTextnum1"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:inputType="numberSigned" />

    <EditText
        android:id="@+id/editTextnum1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinnerunit"
        android:layout_below="@+id/spinnerunit"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:inputType="numberSigned" />

    <Button
        android:id="@+id/buttonconvert"
        style="@android:style/ButtonBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextnum2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="convert" />

    <Spinner
        android:id="@+id/spinnerunit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="19dp" />

    <TextView
        android:id="@+id/textViewresult"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/buttonconvert"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#33CCFF"
        android:textSize="40dp" />

</RelativeLayout>
