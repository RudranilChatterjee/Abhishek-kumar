<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.abhishek.unitconverter"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.abhishek.unitconverter.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.abhishek.unitconverter.Temperature"
            android:label="@string/title_activity_temperature" >
        </activity>
        <activity
            android:name="com.abhishek.unitconverter.Length"
            android:label="@string/title_activity_length" >
        </activity>
        <activity
            android:name="com.abhishek.unitconverter.Mass"
            android:label="@string/title_activity_mass" >
        </activity>
        <activity
            android:name="com.abhishek.unitconverter.Speed"
            android:label="@string/title_activity_speed" >
        </activity>
        <activity
            android:name="com.abhishek.unitconverter.Currency"
            android:label="@string/title_activity_currency" >
        </activity>
        <activity
            android:name="com.abhishek.unitconverter.DigitalStorage"
            android:label="@string/title_activity_digital_storage" >
        </activity>
    </application>

</manifest>
